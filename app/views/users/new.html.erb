<h2 class="ui center aligned large header">
  Welcome to Aboleth
</h2>
<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Sign up to continue
</h4>
<div class="ui placeholder segment">
  <div class="column">
    <%= form_with(scope: :user, url: signup_path, class: "ui form") do |f| %>
      <div class="field">
        <%= f.label :username %>
        <div class="ui left icon input">
          <%= f.text_field :username, placeholder: "Username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit "Sign Up", class: "ui orange submit button" %>
    <% end %>
  </div>
</div>
